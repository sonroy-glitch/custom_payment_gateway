generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id Int @id @default(autoincrement()) @unique
  name String
  email String @unique
  number String @unique
  passcode String
  balance Int
transactions Transactions[]

}

model Merchant{
   id Int @id @default(autoincrement()) @unique
  name String
  email String @unique
  passcode String
  balance Int
}
model Transactions{
  id        Int          @id @default(autoincrement())
  status    OnRampStatus
  token     String       @unique
  provider  String
  amount    Int
  startTime String
  userId    Int
  user      User         @relation(fields: [userId], references: [id])
}
// wallet in some regional bank 
model Wallet{
  id Int @id @default(autoincrement()) @unique
  name String
  email String  @unique
  number String @unique
  passcode String
  balance Int
}
enum OnRampStatus{
  Success
  Failure
  Processing
}